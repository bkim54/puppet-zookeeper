#!/bin/bash
#
# zookeeper    Startup script for the zookeeper
#
# chkconfig: 2345 90 10
# description: zookeeper, providing zookeeper
# pidfile: /var/run/zookeeper.pid

### BEGIN INIT INFO
# Provides:		zookeeper
# Required-Start:	$all
# Required-Stop:	$local_fs
# Default-Start: 	2 3 4 5
# Default-Stop: 	0 1 6
# Short-Description:	zookeeper
# Description:		zookeeper services.
### END INIT INFO

# Source function library
. /lib/lsb/init-functions

prog="zookeeper"
RETVAL=0
PIDFILE=/var/run/$prog.pid
zookeeperd="<%= @install_dir %>/bin/zkServer.sh"

start() {
	echo -n $"Starting $prog: "
	cd <%= @install_dir %>
	nohup su -s /bin/bash zookeeper -c "$zookeeperd start" &>>/var/log/zookeeper/service.log &

	RETVAL=$?
	PID=`ps ax | grep -E '[j]ava.*zookeeper.server' | awk '{print $1}'`
	echo $PID > $PIDFILE
	if [ $RETVAL -eq 0 ]; then
		touch /var/run/$prog
		log_success_msg
	else
		log_failure_msg
	fi
	echo
	return $RETVAL
}

stop() {
	echo -n $"Stopping $prog: "
	nohup su -s /bin/bash zookeeper -c "$zookeeperd stop" &>>/var/log/zookeeper/service.log &
	RETVAL=$?
	echo
	[ $RETVAL -eq 0 ] && rm -f /var/run/$prog && rm -f /var/run/$PIDFILE
	return $RETVAL
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		start
		;;
	status)
		status_of_proc -p $PIDFILE $DAEMON $prog
		RETVAL=$?
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|status}"
		RETVAL=1
esac

exit $RETVAL
